<Window x:Class="LobbyClient.DownloadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LobbyClient"
        mc:Ignorable="d"
        Title="Download File" Height="200" Width="400">
    <Grid>
        <Grid>
            <TextBlock x:Name="downloadText" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" FontSize="16">
            Downloading file...
            </TextBlock>
            <ProgressBar Name="DownloadProgressBar" Height="30" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <Button x:Name="cancelOrDoneButton" Content="Cancel" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Click="CancelDownload_Click"/>
        </Grid>
    </Grid>
</Window>
